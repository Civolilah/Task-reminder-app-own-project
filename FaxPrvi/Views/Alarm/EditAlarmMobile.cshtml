@model GenerateSuccess.ViewModels.NewAlarmVM

<div id="addiv1"></div>
<div id="addiv2"></div>
<div id="adinarticle"></div>
<div id="newtaskdiv" class="container col-lg-12">
    <div id="chilnewtaskdiv" class="alarmnewdiv">
        <h3>Edit alarm</h3>
        <form method="post" action="/Alarm/SaveAlarmChangesMobile" id="formid">
            <div class="inputdivparentname">
                <input class="effect inputsearch newtaskinputname" type="text" placeholder="Alarm name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Alarm name'" asp-for="AlarmName" name="AlarmName" />
                <span asp-validation-for="AlarmName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.Key" name="Key" readonly />
            <br />
            
            <div id="createfor">
                <span class="newtasktext">Create for:</span><br />
                <select id="createforralarm" class="form-control dropdownn" asp-for="CreatedFor" name="CreatedFor">
                    @if (Model.CreatedFor == "1")
                    {
                        <option value="1" selected>Once</option>
                    }
                    else
                    {
                        <option value="1">Once</option>
                    }
                    @if (Model.CreatedFor == "2")
                    {
                        <option value="2" selected>Custom</option>
                    }
                    else
                    {
                        <option value="2">Custom</option>
                    }
                </select>
                <br />
                <span asp-validation-for="CreatedFor" class="text-danger"></span>
                <div id="customcreateforalarm">
                    <span class="newtasktext">Days:</span>
                    <br />
                    <br />
                    <div class="weekDays-selector">
                        @if (Model.M == "true")
                        {
                            <input type="checkbox" id="weekday-mona" class="weekday" name="M" asp-for="M" checked />
                        }
                        else
                        {
                            <input type="checkbox" id="weekday-mona" class="weekday" name="M" asp-for="M" />
                        }
                        <label for="weekday-mona">Mon</label>
                        @if (Model.T == "true")
                        {
                            <input type="checkbox" id="weekday-tuea" class="weekday" name="T" asp-for="T" checked />
                        }
                        else
                        {
                            <input type="checkbox" id="weekday-tuea" class="weekday" name="T" asp-for="T" />
                        }
                        <label for="weekday-tuea">Tue</label>
                        @if (Model.W == "true")
                        {
                            <input type="checkbox" id="weekday-weda" class="weekday" name="W" asp-for="W" checked />
                        }
                        else
                        {
                            <input type="checkbox" id="weekday-weda" class="weekday" name="W" asp-for="W" />
                        }
                        <label for="weekday-weda">Wed</label>
                        @if (Model.Th == "true")
                        {
                            <input type="checkbox" id="weekday-thua" class="weekday" name="Th" asp-for="Th" checked />
                        }
                        else
                        {
                            <input type="checkbox" id="weekday-thua" class="weekday" name="Th" asp-for="Th" />
                        }
                        <label for="weekday-thua">Thu</label>
                        @if (Model.F == "true")
                        {
                            <input type="checkbox" id="weekday-fria" class="weekday" name="F" asp-for="F" checked />
                        }
                        else
                        {
                            <input type="checkbox" id="weekday-fria" class="weekday" name="F" asp-for="F" />
                        }
                        <label for="weekday-fria">Fri</label>
                        @if (Model.Sa == "true")
                        {
                            <input type="checkbox" id="weekday-sata" class="weekday" name="Sa" asp-for="Sa" checked />
                        }
                        else
                        {
                            <input type="checkbox" id="weekday-sata" class="weekday" name="Sa" asp-for="Sa" />
                        }
                        <label for="weekday-sata">Sat</label>
                        @if (Model.S == "true")
                        {
                            <input type="checkbox" id="weekday-suna" class="weekday" name="S" asp-for="S" checked />
                        }
                        else
                        {
                            <input type="checkbox" id="weekday-suna" class="weekday" name="S" asp-for="S" />
                        }
                        <label for="weekday-suna">Sun</label>
                    </div>
                    <br />
                    <span id="daysvalalarm" asp-validation-for="M" class="text-danger"></span>
                    <br />
                </div>
            </div>
            <br />
            <div id="oncecreatedalarm">
                <div id="startdiv" class="startenddiv">
                    <span class="newtasktext">Ringing time:</span><br />
                    <div class="childstartendtimediv">
                        <div class="startendtimediv" style="margin-left:0;">
                            <input type="time" class="startendtime" name="RingingTime" asp-for="RingingTime" asp-format="{0:HH:mm}" />
                        </div>
                    </div>
                </div>
                <br />
            </div>
            <span class="newtasktext">Sound:</span>
            <select id="AlarmSound" class="form-control" asp-for="Sound" name="Sound">
                @if (Model.Sound == "AlarmSound1")
                {
                    <option value="1" selected>Classic</option>
                }
                else
                {
                    <option value="1">Classic</option>
                }
                @if (Model.Sound == "AlarmSound2")
                {
                    <option value="2" selected>Electronic</option>
                }
                else
                {
                    <option value="2">Electronic</option>
                }
                @if (Model.Sound == "AlarmSound3")
                {
                    <option value="3" selected>Fast siren</option>
                }
                else
                {
                    <option value="3">Fast siren</option>
                }
                @if (Model.Sound == "AlarmSound4")
                {
                    <option value="4" selected>Heavy metal</option>
                }
                else
                {
                    <option value="4">Heavy metal</option>
                }
                @if (Model.Sound == "AlarmSound5")
                {
                    <option value="5" selected>Broken piano</option>
                }
                else
                {
                    <option value="5">Broken piano</option>
                }
                @if (Model.Sound == "AlarmSound6")
                {
                    <option value="6" selected>Alert</option>
                }
                else
                {
                    <option value="6">Alert</option>
                }
                @if (Model.Sound == "AlarmSound7")
                {
                    <option value="7" selected>Police siren</option>
                }
                else
                {
                    <option value="7">Police siren</option>
                }
            </select>
            <span asp-validation-for="Sound" class="text-danger"></span>
            <br />
            <span class="newtasktext">Ringing duration (min):</span>
            <select class="form-control" asp-for="RingingDuration" name="RingingDuration">
                @if (Model.RingingDuration == "1")
                {
                    <option value="1" selected>1 minute</option>
                }
                else
                {
                    <option value="1">1 minute</option>
                }
                @if (Model.RingingDuration == "3")
                {
                    <option value="3" selected>3 minutes</option>
                }
                else
                {
                    <option value="3">3 minutes</option>
                }
                @if (Model.RingingDuration == "5")
                {
                    <option value="5" selected>5 minutes</option>
                }
                else
                {
                    <option value="5">5 minutes</option>
                }
                @if (Model.RingingDuration == "10")
                {
                    <option value="10" selected>10 minutes</option>
                }
                else
                {
                    <option value="10">10 minutes</option>
                }
                @if (Model.RingingDuration == "15")
                {
                    <option value="15" selected>15 minutes</option>
                }
                else
                {
                    <option value="15">15 minutes</option>
                }
                @if (Model.RingingDuration == "20")
                {
                    <option value="20" selected>20 minutes</option>
                }
                else
                {
                    <option value="20">20 minutes</option>
                }
                @if (Model.RingingDuration == "30")
                {
                    <option value="30" selected>30 minutes</option>
                }
                else
                {
                    <option value="30">30 minutes</option>
                }
            </select>
            <span asp-validation-for="RingingDuration" class="text-danger"></span>
            <br />
            <span class="newtasktext">Snooze duration (min):</span>
            <select class="form-control" asp-for="SnoozeDuration" name="SnoozeDuration">
                @if (Model.SnoozeDuration == "5")
                {
                    <option value="5" selected>5 minutes</option>
                }
                else
                {
                    <option value="5">5 minutes</option>
                }
                @if (Model.SnoozeDuration == "10")
                {
                    <option value="10" selected>10 minutes</option>
                }
                else
                {
                    <option value="10">10 minutes</option>
                }
                @if (Model.SnoozeDuration == "15")
                {
                    <option value="15" selected>15 minutes</option>
                }
                else
                {
                    <option value="15">15 minutes</option>
                }
                @if (Model.SnoozeDuration == "20")
                {
                    <option value="20" selected>20 minutes</option>
                }
                else
                {
                    <option value="20">20 minutes</option>
                }
                @if (Model.SnoozeDuration == "25")
                {
                    <option value="25" selected>25 minutes</option>
                }
                else
                {
                    <option value="25">25 minutes</option>
                }
                @if (Model.SnoozeDuration == "30")
                {
                    <option value="30" selected>30 minutes</option>
                }
                else
                {
                    <option value="30">30 minutes</option>
                }
            </select>
            <span asp-validation-for="SnoozeDuration" class="text-danger"></span>
            <br />
            <span class="newtasktext">Activity:</span>
            <select class="form-control" asp-for="Activity" name="Activity">
                @if (Model.Activity == "true")
                {
                    <option value="1" selected>Active</option>
                }
                else
                {
                    <option value="1">Active</option>
                }
                @if (Model.Activity == "false")
                {
                    <option value="2" selected>Inactive</option>
                }
                else
                {
                    <option value="2">Inactive</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="Activity"></span>
            @if (!User.Identity.IsAuthenticated)
            {
                <br />
                <span class="helptext">For permanent storage of alarm <a href="/Account/Login">Log in</a></span>
            }
            <br />
            <br />
            <button type="submit" class="btn savetaskbtn">Save alarm</button>
            <br />
        </form>
    </div>
</div>


